<div class="container">

    <section>
        {{next-event events=model.events}}
    </section>
    {{!--
    <section>
        <div class="article article-transparent article-grid">
            <img src="/img/flyer-burg-kapellendorf-front.jpg" alt="" class="filled" />
            <img src="/img/flyer-burg-kapellendorf-back.jpg" alt=""  class="filled" />
        </div>
    </section>
    --}}
    <section>
        {{#each model.events as |event|}}
            <div class="article article-{{if event.nextEvent 'highlighted' 'default'}} article-grid {{if event.eventStillInProgress 'event-running'}}">
                <div class="article-content">
                    <h2 class="article-headline">
                        {{format-date event.from}}
                        {{#if event.to}} - {{format-date event.to}}{{/if}}
                    </h2>
                    <div>
                        <strong>{{event.title}}</strong><br/>
                        {{event.description}}
                    </div>
                </div>
            </div>
        {{/each}}
    </section>

    {{outlet}}

</div>